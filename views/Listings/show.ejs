<%- layout('/layouts/boilerplate') -%>
<body>
<div class="row">
  <div class="col-lg-8 offset-lg-2 col-md-6 offset-md-3 col-12 ">
    <h3 class="text-center"><%= listing.title %></h3>
    <div class="card border-none my-4">
      <img
        src="<%= listing.image %>"
        class="card-img-top rounded-4 img-h-20r"
        alt="<%= listing.title %>"
      />
      <div class="card-body p-0">
        <p class="card-text pt-2 mb-2">
          <span class="fw-medium">
            &#8377;<%=listing.price.toLocaleString('en-IN') %>/night
          </span>
          <br>
          <span><%= listing.description %></span>
          <br>
          <span class="fw-medium"><%= listing.location %></span>
          <br>
          <span class="fw-semibold"><%= listing.country %></span>
        </p>
      </div>
      <div class="row">
        <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
          <a href="/listings/<%= listing._id %>/edits" class="btn btn-dark green-btn">Edit</a>
          <button type="submit" class="btn btn-danger mx-2">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
</body>
