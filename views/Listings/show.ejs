<%- layout('/layouts/boilerplate') -%>

  <body>
    <div class="row">
      <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-12 ">
        <h3 class="text-center">
          <%= listing.title %>
        </h3>
        <div class="card border-none my-4">
          <img src="<%= listing.image %>" class="card-img-top rounded-4 img-h-20r" alt="<%= listing.title %>" />
          <div class="card-body p-0">
            <p class="card-text pt-2 mb-2">
              <span class="fw-medium">
                &#8377;<%=listing.price.toLocaleString('en-IN') %>/night
              </span>
              <br>
              <span>
                <%= listing.description %>
              </span>
              <br>
              <span class="fw-medium">
                <%= listing.location %>
              </span>
              <br>
              <span class="fw-semibold">
                <%= listing.country %>
              </span>
            </p>
          </div>
          <div class="row">
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
              <a href="/listings/<%= listing._id %>/edits" class="btn btn-dark green-btn">Edit</a>
              <button type="submit" class="btn btn-danger mx-2">Delete</button>
            </form>
          </div>
        </div>
      </div>
      <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-12 ">
        <hr>
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
          <div class="mb-4">
            <label class="form-label fw-medium" for="rating">Rating</label>
            <input class="form-range" type="range" name="review[rating]" id="rating" min="1" max="5">
          </div>
          <div class="mb-4">
            <label class="form-label fw-medium" for="comment">Comment</label>
            <textarea class="form-control resize-none border-shadow-green" type="text" name="review[comment]"
              id="comment" placeholder="Share your review." rows="5" required></textarea>
            <div class="invalid-feedback">Please add your review.</div>
          </div>
          <button type="submit" class="btn btn-sm btn-outline-success border-green mb-4">Submit</button>
        </form>
      </div>
      <% if(listing.reviews.length){ %>
        <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-12 mb-4">
          <hr>
          <h4>All Reviews</h4>
          <div class="row row-cols-md-2 row-cols-1">
            <% for(let review of listing.reviews){ %>
              <div class="card col border-none">
                <div class="card-body my-2 bg-light border border-light-subtle">
                  <h5 class="card-title">Sonali Sahu</h5>
                  <p class="card-subtitle mb-2">
                    <%= review.rating %>
                      <i class="fa-solid fa-star" style="color: #FFD43B;"></i>

                  </p>
                  <p class="card-text"><%= review.comment %></p>
                  <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" >
                    <button type="submit" class="btn btn-sm btn-outline-dark">Delete</button>
                  </form>
                </div>
              </div>
              <% } %>
          </div>
        </div>
        <% } %>
    </div>
  </body>