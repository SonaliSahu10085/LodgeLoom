<% if(success && success.length){ %>
    <div class="alert alert-info alert-dismissible fade show fw-medium col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-10 offset-1"
        role="alert">
        <i class="fa-solid fa-circle-check"></i>
        <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(error && error.length){ %>
    <div class="alert alert-danger alert-dismissible fade show fw-medium col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-10 offset-1" role="alert">
        <i class="fa-solid fa-triangle-exclamation"></i>
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>